  <link rel="stylesheet" href="/css/footer.css">
  <title>Sketch Studio</title>
</head>

<body>
  <main>
    <%- include('./partials/header') %>
    <section class="adm-container">
      <form class="form-adm" action="/editPage?_method=PUT" method="POST">
        <img src="">
          <label>Nome: 
            <input type="name" name="nome" value="<%= user.nome %>">
          </label>
